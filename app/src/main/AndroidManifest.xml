<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.cryptocom">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/emerald"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/emerald"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.">
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".EthActivity"
            android:configChanges="orientation|screenSize"
            android:label="ETH Price List" />
        <activity
            android:name=".BTCActivity"
            android:configChanges="orientation|screenSize"
            android:label="BTC Price List" />
        <activity
            android:name=".BTCConversion"
            android:configChanges="orientation|screenSize"
            android:label="BTC Conversion Screen" />
        <activity android:name=".ETHCONVERT"
            android:configChanges="orientation|screenSize"
            android:label="ETH Conversion Screen"/>

    </application>

</manifest>